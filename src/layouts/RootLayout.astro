---
import Navbar from "@/components/Navbar";
import "../styles/global.css";
import Footer from "@/components/Footer";
import { MailIcon, PhoneOutgoingIcon } from "lucide-react";
import { Font } from "astro:assets";

interface Props {
  title?: string;
}

const { title = "CZ Engineering" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/*" href="/favicon.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
    <Font cssVariable="--font-space-grotesk" preload />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="w-full bg-[#0D80CE] p-1 md:p-2 text-white flex items-center justify-center gap-4 border-b"
    >
      <div class="flex gap-2 text-sm md:text-base items-center">
        <MailIcon className="w-4 h-4" />
        <a href="mailto:info@czengineering.net">info@czengineering.net</a>
      </div>
      <div class="flex gap-2 text-sm md:text-base items-center">
        <PhoneOutgoingIcon className="w-4 h-4" />
        <a href="tel:+880-1729-426944">+880-1729-426944</a>
      </div>
    </div>
    <Navbar client:load />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: var(--font-space-grotesk);
  }
</style>
