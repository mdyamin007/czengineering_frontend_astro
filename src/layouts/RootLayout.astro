---
import Navbar from "@/components/Navbar";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "CZ Engineering" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
